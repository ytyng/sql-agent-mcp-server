{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mcp_server.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Test List Tools",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test-requests/test_list_tools.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}